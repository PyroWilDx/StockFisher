{
    "manifest_version": 3,
    "name": "StockFisher",
    "version": "1.1",
    "description": "StockFisher",
    "icons": {
        "16": "res/imgs/icons/icon16.png",
        "48": "res/imgs/icons/icon48.png",
        "128": "res/imgs/icons/icon128.png"
    },
    "action": {
        "default_icon": {
            "16": "res/imgs/icons/icon16.png",
            "48": "res/imgs/icons/icon48.png",
            "128": "res/imgs/icons/icon128.png"
        },
        "default_popup": "src/Popup.html"
    },
    "permissions": [
        "storage",
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "https://www.chess.com/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://www.chess.com/*"
            ],
            "js": [
                "dist/Main.js"
            ]
        }
    ]
}